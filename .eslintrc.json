{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"]
    },
    "settings": {
        "react": {
            "version": "16.0"
        }
    }
}
